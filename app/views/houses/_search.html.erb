<% form_for 'search', :url => houses_path, :html => { :method => :get }  do |f| %>
  <div class="span-3 label"><%= t :city %></div>
  <div class="span-6 last field">
  <%= select_tag 'city', Taggable.find_by_field('city_id').tags.map{|tag| '<option value="' + tag.id.to_s + '">' + tag.name + '</option>'} %>
  </div>
  <div class="span-3 label"><%= t :persons %></div>
  <div class="span-6 last field">
  <%= f.text_field :persons_gte, :size=> 15, :value => params[:search] ? params[:search][:persons_gte] : '' %>
  </div>
  <div class="span-3 label"><%= t :date_from %></div>
  <div class="span-6 last field">
  <%= calendar_date_select 'search', 'from', :order => [:year, :month, :day], :size=> 15, :value => params[:search] ? params[:search][:from] : '' %>
  </div>
  <div class="span-3 label"><%= t :date_to %></div>
  <div class="span-6 last field">
  <%= calendar_date_select 'search', 'to', :order => [:year, :month, :day], :size=> 15, :value => params[:search] ? params[:search][:to] : '' %>
  </div>
  <div class="span-3 label"><%= t :code %></div>
  <div class="span-6 last field">
  <%= f.text_field :code_like, :size=> 15, :value => params[:search] ? params[:search][:code_like] : '' %>
  </div>
  <%= submit_tag t :search %>
<% end %>