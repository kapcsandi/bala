<div class="span-6 stamp">
  <div class="location">
    <span class="label"><%= t :city %>:</span>
    <span class="field"><%=h house.city %></span>
    <span class="label"><%= t :code %>:</span>
    <span class="field"><%=h house.code %></span>
  </div>
  <div class="span-6">
    <div class="photos"><% link_to :action => 'show', :id => house, :anchor => 'photos' do %>
    <div><% if house.picture_ids %><%= image_tag house.picture_urls[0] %><% else t('no_picture') end %></div>
    <% end %></div>
  </div>
  <div class="span-6">
    <span class="label"><%= t :persons %>:</span>
    <span class="field"><%=h house.persons %> <%= t('pers') %></span>
  </div>
</div>