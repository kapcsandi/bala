<% title t "House" %>

  <% field_set_tag 'Ház alapinfók' do %>
    <p>
      <%= label_tag t :city_id %>:
      <%=h @house.city %>
    </p>
    <p>
      <%= label_tag t :code %>:
      <%=h @house.code %>
    </p>
    <p>
      <%= label_tag t :persons %>:
      <%=h @house.persons %>
    </p>
    <p>
      <%= label_tag t :house_type_id %>:
      <%=h @house.house_type %>
    </p>
    <p>
      <%= label_tag t :condition_id %>:
      <%= @house.condition %>
    </p>
    <p>
      <%= label_tag t :furnishing_id %>:
      <%= @house.furnishing %>
    </p>
    <% field = Taggable.find_by_position(6)
     tagnames = [] %>
    <p>
      <%= label_tag field.name %>:
	<% for tag in field.tags %>
          <% tagnames << tag.name if @house.tags.include?(tag) %>
	<% end %>
      <%= tagnames.join(', ') %>
    </p>
    <p>
      <%= label_tag t :floor_area %>:
      <%=h @house.floor_area %>
    </p>
    <% field = Taggable.find_by_position(80)
     tagnames = [] %>
    <p>
      <%= label_tag field.name %>:
	<% for tag in field.tags %>
          <% tagnames << tag.name if @house.tags.include?(tag) %>
	<% end %>
      <%= tagnames.join(', ') %>
    </p>
  <% end %>
  <% field_set_tag 'Helyiségek elrendezése' do %>
    <% for field in Taggable.find_all_by_position([8, 9, 10, 11])
      tagnames = [] %>
      <% for tag in field.tags %>
	<% tagnames << tag.name if @house.tags.include?(tag) %>
      <% end %>
      <% unless tagnames.empty? %>
	<p>
	  <%= label_tag field.name %>:
	  <%= tagnames.join(', ') %>
	</p>
      <% end %>
    <% end %>
  <% end %>
  <% field_set_tag 'Helyiségek' do %>
    <% for field in %w(bedroom living_room living_dining_room kitchen dining_room kitchen_dining_room balcony) %>
      <% unless @house[field].nil? %>
	<p>
	  <%= label_tag t field %>:
	  <%=h @house[field] %>
	</p>
      <% end %>
    <% end %>
    <p>
      <%= label_tag t :terrace_id %>:
      <%=h @house.terrace %>
    </p>
    <p>
      <%= label_tag t :garden %>:
      <%= check_box_tag @house.garden, 1, @house.garden?, :disabled => true %>
    </p>
  <% end %>
  <% field_set_tag 'Helyiségek alapterülete' do %>
    <% for field in %w(living_room_sq living_dining_room_sq kitchen_sq dining_room_sq kitchen_dining_room_sq terrace_sq balcony_sq yard_sq) %>
      <% unless @house[field].nil? %>
	<p>
	  <%= label_tag t field %>:
	  <%=h @house[field] %>
	</p>
      <% end %>
    <% end %>
  <% end %>
  <% field_set_tag 'Ágyak' do %>
    <% for field in %w(double_bed single_bed extra_bed pull_out_bed) %>
      <% unless @house[field].nil? %>
	<p>
	  <%= label_tag t field %>:
	  <%=h @house[field] %>
	</p>
      <% end %>
    <% end %>
  <% end %>
  <% field_set_tag 'Fürdőszoba' do %>
    <p>
      <%= label_tag t :bathrooms %>:
      <%=h @house.bathrooms %>
    </p>
    <% for field in %w(shower bathtub) %>
    <p>
      <%= label_tag t field %>:
      <%= check_box_tag @house[field], 1, @house[field]==1, :disabled => true %>
    </p>
    <% end %>
  <% end %>
  <% field_set_tag 'WC' do %>
    <p>
      <%= label_tag t :wcs %>:
      <%=h @house.wcs %>
    </p>
    <p>
      <%= label_tag t :wc_separated %>:
      <%= check_box_tag @house.wc_separated, 1, @house.wc_separated==1, :disabled => true %>
    </p>
  <% end %>
  <% field_set_tag 'Konyha' do %>
    <% for field in %w(fridge coffee_machine micro) %>
    <p>
      <%= label_tag t field %>:
      <%= check_box_tag @house[field], 1, @house[field]==1, :disabled => true %>
    </p>
    <% end %>
    <p>
      <%= label_tag t :stove_id %>:
      <%= @house.stove %>
    </p>
  <% end %>
  <% field_set_tag 'Egyéb belső felszereltség' do %>
    <% for field in %w(sat internet) %>
    <p>
      <%= label_tag t field %>:
      <%= check_box_tag @house[field], 1, @house[field]==1, :disabled => true %>
    </p>
    <% end %>
    <p>
      <%= label_tag t :clima_id %>:
      <%= @house.clima %>
    </p>
  <% end %>
  <% field_set_tag 'Egyéb külső felszereltség' do %>
    <p>
      <%= label_tag t :pool %>:
      <%= check_box_tag :pool, 1, @house.pool, :disabled => true %>
    </p>
    <div id="pool_sq"<%= "style='display:none'" unless @house.pool %>>
      <p>
	<%= label_tag t :pool_sq %>:
	<%=h @house.pool_sq %>
      </p>
    </div>
    <% for field in %w(garden_seats grill sunbath_seat playground) %>
    <p>
      <%= label_tag t field %>:
      <%= check_box_tag @house[field], 1, @house[field]==1, :disabled => true %>
    </p>
    <% end %>
    <p>
      <%= label_tag t :parking_id %>:
      <%= @house.parking %>
    </p>
  <% end %>
  <% field_set_tag 'Távolságok' do %>
    <p>
      <%= label_tag t :distance_center %>:
      <%=h @house.distance_center %>
    </p>
    <p>
      <%= label_tag t :distance_beach %>:
      <%=h @house.distance_beach %>
    </p>
    <p>
      <%= label_tag t :distance_aquapark %>:
      <%=h @house.distance_aquapark %>
    </p>
    <p>
      <%= label_tag t :distance_shop %>:
      <%=h @house.distance_shop %>
    </p>
    <p>
      <%= label_tag t :distance_station %>:
      <%=h @house.distance_station %>
    </p>
    <p>
      <%= label_tag t :distance_medical %>:
      <%=h @house.distance_medical %>
    </p>
    <p>
      <%= label_tag t :distance_mainroad %>:
      <%=h @house.distance_mainroad %>
    </p>
    <p>
      <%= label_tag t :distance_restaurant %>:
      <%=h @house.distance_restaurant %>
    </p>
  <% end %>
  <% field_set_tag 'Háztulajdonos infók' do %>
    <% field = Taggable.find_by_position(61)
    tagnames = [] %>
    <% for tag in field.tags %>
      <% tagnames << tag.name if @house.tags.include?(tag) %>
    <% end %>
    <% unless tagnames.empty? %>
    <p>
      <%= label_tag field.name %>:
      <%= tagnames.join(', ') %>
    </p>
    <% end %>
    <p>
      <%= label_tag t :owner_place_id %>:
      <%= @house.owner_place %>
    </p>
  <% end %>
  <% field_set_tag 'Háziállat' do %>
    <p>
      <%= label_tag t :animals %>:
      <%= check_box_tag :animals, 1, @house.animals, :disabled => true %>
    </p>
    <div id="animal_charge"<%= "style='display:none'" unless @house.animals %>>
      <p>
	<%= label_tag t :animal_charge %>:
	<%=h @house.animal_charge %>
      </p>
    </div>
  <% end %>
  <% field_set_tag 'Ár / fő / éj' do %>
    <p>
      <%= label_tag t :price_pre_season %>:
      <%=h @house.price_pre_season_per_day %>
    </p>
    <p>
      <%= label_tag t :price_mid_season %>:
      <%=h @house.price_mid_season_per_day %>
    </p>
    <p>
      <%= label_tag t :price_main_season %>:
      <%=h @house.price_main_season_per_day %>
    </p>
  <% end %>
  <% field_set_tag 'Ár / fő / hét' do %>
    <p>
      <%= label_tag t :price_pre_season %>:
      <%=h @house.price_pre_season_per_week %>
    </p>
    <p>
      <%= label_tag t :price_mid_season %>:
      <%=h @house.price_mid_season_per_week %>
    </p>
    <p>
      <%= label_tag t :price_main_season %>:
      <%=h @house.price_main_season_per_week %>
    </p>
  <% end %>
  <% field_set_tag 'Leírások' do %>
    <p>
      <%= label_tag t :discounted %> :
      <%= check_box_tag :discounted, 1, @house.discounted?, :disabled => true %>
    </p>
    <% if @house.discounted? %><br />
    <p>
      <%= text_area_tag :discount, @house.discount.description, :disabled => true %>
    </p>
    <% end %>
    <p>
      <%= label_tag t :house_description %>:<br />
      <%= text_area_tag :house_description, @house.house_description, :disabled => true  %>
    </p>
    <p>
      <%= label_tag t :admin_description %>:<br />
      <%= text_area_tag :admin_description, @house.admin_description, :disabled => true  %>
    </p>
  <% end %>
  <% field_set_tag t('pictures') do %>
    <p>
    <% (0..7).each do |id| %>
      <%= label_tag t :picture_url, :position => id+1 %>
      <%= text_field_tag 'house[picture_urls][]', @house.picture_urls[id], :disabled => true %><br />
    <% end if @house.picture_urls.respond_to?('index') %>
    </p>
  <% end %>

<p>
  <%= link_to "Edit", edit_house_path(@house) %> |
  <%= link_to "Destroy", @house, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", houses_path %>
</p>
