<div class="inner">
<div class="mini">
<%= render :partial => 'mini', :locals => { :house => @house, :cycle_class => '' } %>
<%= render :partial => 'navigation' , :locals => { :house => @house }%>
</div>  
<a name="details"></a>
<% field_set_tag t('house_basics'), :class => 'fullwidth' do %>
    <% field = Taggable.find_by_position(6)
     tagnames = [] %>
    <p>
      <%= label_tag field.name %>:
	<% for tag in field.tags %>
          <% tagnames << tag.name if @house.tags.include?(tag) %>
	<% end %>
      <%= tagnames.join(', ') %>
    </p>
    <% field = Taggable.find_by_position(80)
     tagnames = [] %>
    <p>
      <%= label_tag field.name %>:
	<% for tag in field.tags %>
          <% tagnames << tag.name if @house.tags.include?(tag) %>
	<% end %>
      <%= unless tagnames.empty? 
	tagnames.join(', ')
      else
	t('house_not_in_any_group')
      end %>
    </p>
  <% end %>
  <% field_set_tag t('house_layout') do %>
    <% for field in Taggable.find_all_by_position([8, 9, 10, 11])
      tagnames = [] %>
      <% for tag in field.tags %>
	<% tagnames << tag.name if @house.tags.include?(tag) and tag.name != t('nincs') %>
      <% end %>
      <% unless tagnames.empty? %>
	<p>
	  <%= label_tag field.name %>:
	  <%= tagnames.join(', ') %>
	</p>
      <% end %>
    <% end %>
  <% end %>
  <% field_set_tag t('house_rooms') do %>
    <% for field in %w(bedroom living_room living_dining_room kitchen dining_room kitchen_dining_room balcony) %>
      <% unless @house[field].nil? or @house[field]==0 %>
	<p>
	  <%= label_tag t field %>:
	  <%=h @house[field] %> <%= t(:items) %>
	</p>
      <% end %>
    <% end %>
    <p>
      <%= label_tag t :terrace_id %>:
      <%=h @house.terrace %>
    </p>
    <p>
      <%= label_tag t :garden %>:
      <%= check_box_tag @house.garden, 1, @house.garden?, :disabled => true %>
    </p>
  <% end %>
  <% field_set_tag t('house_rooms_sq') do %>
    <% for field in %w(living_room_sq living_dining_room_sq kitchen_sq dining_room_sq kitchen_dining_room_sq terrace_sq balcony_sq yard_sq) %>
      <% unless @house[field].nil? or @house[field] == '0' %>
	<p>
	  <%= label_tag t field %>:
	  <%=h @house[field] %> <%= t(:sqmeter) %>
	</p>
      <% end %>
    <% end %>
  <% end %>
  <% field_set_tag t('house_beds') do %>
    <% for field in %w(double_bed single_bed extra_bed pull_out_bed) %>
      <% unless @house[field].nil? or @house[field] == 0 %>
	<p>
	  <%= label_tag t field %>:
	  <%=h @house[field] %> <%= t(:items) %>
	</p>
      <% end %>
    <% end %>
  <% end %>
  <% field_set_tag t('house_bathrooms') do %>
    <p>
      <%= label_tag t :bathrooms %>:
      <%=h @house.bathrooms %> <%= t(:items) %>
    </p>
    <% for field in %w(shower bathtub) %>
    <p>
      <%= label_tag t field %>:
      <%= check_box_tag @house[field], 1, @house[field]==1, :disabled => true %>
    </p>
    <% end %>
  <% end %>
  <% field_set_tag t('house_wc') do %>
    <p>
      <%= label_tag t :wcs %>:
      <%=h @house.wcs %> <%= t(:items) %>
    </p>
    <p>
      <%= label_tag t :wc_separated %>:
      <%= check_box_tag @house.wc_separated, 1, @house.wc_separated==1, :disabled => true %>
    </p>
  <% end %>
  <% field_set_tag t('house_kitchen') do %>
    <% for field in %w(fridge coffee_machine micro) %>
    <p>
      <%= label_tag t field %>:
      <%= check_box_tag @house[field], 1, @house[field]==1, :disabled => true %>
    </p>
    <% end %>
    <p>
      <%= label_tag t :stove_id %>:
      <%= @house.stove %>
    </p>
  <% end %>
  <% field_set_tag t('house_inters') do %>
    <% for field in %w(sat internet) %>
    <p>
      <%= label_tag t field %>:
      <%= check_box_tag @house[field], 1, @house[field]==1, :disabled => true %>
    </p>
    <% end %>
    <p>
      <%= label_tag t :clima_id %>:
      <%= @house.clima %>
    </p>
  <% end %>
  <% field_set_tag t('house_outers') do %>
    <p>
      <%= label_tag t :pool %>:
      <%= check_box_tag :pool, 1, @house.pool?, :disabled => true %>
    </p>
    <div id="pool_sq"<%= "style='display:none'" unless @house.pool? %>>
      <p>
	<%= label_tag t :pool_sq %>:
	<%=h @house.pool_sq %> <%= t(:sqmeter) %>
      </p>
    </div>
    <% for field in %w(garden_seats grill sunbath_seat playground) %>
    <p>
      <%= label_tag t field %>:
      <%= check_box_tag @house[field], 1, @house[field]==1, :disabled => true %>
    </p>
    <% end %>
    <p>
      <%= label_tag t :parking_id %>:
      <%= @house.parking %>
    </p>
  <% end %>
  <% field_set_tag t('house_distances') do %>
    <p>
      <%= label_tag t :distance_center %>:
      <%=h @house.distance_center %> m
    </p>
    <p>
      <%= label_tag t :distance_beach %>:
      <%=h @house.distance_beach %> m
    </p>
    <p>
      <%= label_tag t :distance_aquapark %>:
      <%=h @house.distance_aquapark %> m
    </p>
    <p>
      <%= label_tag t :distance_shop %>:
      <%=h @house.distance_shop %> m
    </p>
    <p>
      <%= label_tag t :distance_station %>:
      <%=h @house.distance_station %> m
    </p>
    <p>
      <%= label_tag t :distance_medical %>:
      <%=h @house.distance_medical %> m
    </p>
    <p>
      <%= label_tag t :distance_mainroad %>:
      <%=h @house.distance_mainroad %> m
    </p>
    <p>
      <%= label_tag t :distance_restaurant %>:
      <%=h @house.distance_restaurant %> m
    </p>
  <% end %>
  <% field_set_tag t('house_owner_infos'), :class => 'fullwidth' do %>
    <% field = Taggable.find_by_position(61)
    tagnames = [] %>
    <% for tag in field.tags %>
      <% tagnames << tag.name if @house.tags.include?(tag) %>
    <% end %>
    <% unless tagnames.empty? %>
    <p>
      <%= label_tag field.name %>:
      <%= tagnames.join(', ') %>
    </p>
    <% end %>
    <p>
      <%= label_tag t :owner_place_id %>:
      <%= @house.owner_place %>
    </p>
  <% end %>
  <% field_set_tag t('house_animals') do %>
    <p>
      <%= label_tag t :animals %>:
      <%= check_box_tag :animals, 1, @house.animals?, :disabled => true %>
    </p>
    <div id="animal_charge"<%= "style='display:none'" unless @house.animals? and @house.animal_charge != 0 %>>
      <p>
	<%= label_tag t :animal_charge %>:
	<%=h @house.animal_charge %>
      </p>
    </div>
  <% end %>
  <% field_set_tag t('house_price_day') do %>
    <p>
      <%= label_tag t :price_pre_season %>:
      <%=h @house.price_pre_season_per_day %> <%= t(:euro) %>
    </p>
    <p>
      <%= label_tag t :price_mid_season %>:
      <%=h @house.price_mid_season_per_day %> <%= t(:euro) %>
    </p>
    <p>
      <%= label_tag t :price_main_season %>:
      <%=h @house.price_main_season_per_day %> <%= t(:euro) %>
    </p>
  <% end %>
  <% field_set_tag t('house_price_week') do %> <%= t(:euro) %>
    <p>
      <%= label_tag t :price_pre_season %>:
      <%= @house.price_pre_season_per_week %> <%= t(:euro) %>
    </p>
    <p>
      <%= label_tag t :price_mid_season %>:
      <%=h @house.price_mid_season_per_week %> <%= t(:euro) %>
    </p>
    <p>
      <%= label_tag t :price_main_season %>:
      <%=h @house.price_main_season_per_week %> <%= t(:euro) %>
    </p>
  <% end %>
  <% field_set_tag t('house_description'), :class => 'fullwidth' do %>
    <% if @house.discounted? %>
    <p>
      <%= label_tag t :discounted %> :
      <%= check_box_tag :discounted, 1, @house.discounted?, :disabled => true %>
    </p><br />
    <p>
      <%= text_area_tag :discount, @house.discount.description, :disabled => true %>
    </p>
    <% end %>
    <p>
      <%= label_tag t :house_description %>:<br />
      <%= text_area_tag :house_description, @house.house_description, :disabled => true  %>
    </p>
    <p>
      <%= label_tag t :admin_description %>:<br />
      <%= text_area_tag :admin_description, @house.admin_description, :disabled => true  %>
    </p>
  <% end %>
  <a name="photos">  </a>
  <% field_set_tag t('pictures'), :class => 'photos' do %>
    <% @house.picture_urls.each do |id| %>
    <div>
      <%= image_tag id %>
    </div>
    <% end if @house.picture_ids.respond_to?('index') %>
  <% end %>

<p>
  <%= link_to "Edit", edit_house_path(@house) %> |
  <%= link_to "Destroy", @house, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", houses_path %>
</p>
</div>