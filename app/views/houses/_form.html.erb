      <%= f.text_field :bathrooms %>
    </p>
    <% for field in %w(shower bathtub) %>
    <p>
      <%= f.check_box field %>
      <%= f.label t("admin.#{field}") %><br />
    </p>
    <% end %>
  <% end %>
  <% field_set_tag t('house_wc') do %>
    <p>
      <%= f.label t('admin.wcs') %><br />
      <%= f.text_field :wcs %>
