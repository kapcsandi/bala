<% title "Houses Booking" %>

<p>
  <strong>Házkód:</strong>
  <%=h @houses_booking.house.code %>
</p>
<% if @houses_booking.booking_id %>
<p>
  <strong>Foglalás:</strong>
  <%=h @houses_booking.booking_id %>
</p>
<% end %>
<p>
  <strong>Érkezés:</strong>
  <%=h @houses_booking.start_at %>
</p>
<p>
  <strong>Távozás:</strong>
  <%=h @houses_booking.end_at %>
</p>
<p>
  <strong>Állapot:</strong>
  <%=h @houses_booking.status %>
</p>

<p>
  <%= link_to t('admin.edit'), edit_houses_booking_path(@houses_booking) %> |
  <%= link_to t('admin.destroy'), @houses_booking, :confirm => t('Are you sure?'), :method => :delete %> |
  <%= link_to t('admin.view_all'), houses_bookings_path %>
</p>
