<% form_for @season do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label t('admin.name') %><br />
    <%= f.select :name, %w{pre_saison mid_saison main_saison post_saison} %>
  </p>
  <p>
    <%= f.label t('admin.start') %><br />
    <%= f.date_select :start %>
  </p>
  <p>
    <%= f.label t('admin.end') %><br />
    <%= f.date_select :end %>
  </p>
  <p><%= f.submit t('admin.submit') %></p>
<% end %>
