<% unless admin? %><div id="flash_error"><%= t(:booking_warning) %></div><% end %>
<% form_for booking do |f| %>
  <%= f.error_messages%>
  <% unless admin? %><div id="flash_notice"><%= t(:booking_hint) %></div><% end %>
  <% field_set_tag t('booking_details'), :class => 'odd' do %>
    <% if houses.size > 0 %>
      <%= label_tag t('selected_houses', :count => houses.size) %>:
      <ul id="houses_bookings">
      <% for house in houses do %>
        <% content_tag_for :li, house do %>
          <%= render :partial => 'houses/stamp', :locals => { :house => house, :last => (houses.last == house), :open => false} %>
          <% f.fields_for 'houses[]', house do |hb_form| %>
            <div class="handle"><%= hb_form.label t(:code) %></div>
            <%= hb_form.text_field :code, :size => 20, :readonly => true %>
          <% end %>
        <% end %>
      <% end %>
      </ul>
      <br class="clear" />
    <% else %>
      <% f.fields_for 'houses[]', House.new do |hb_form| %>
        <div id="houses_bookings" class="span-6 append-13">
          <%= label_tag t('selected_houses', :count => houses.size) %>:<br />
          <div><%= hb_form.label t(:code) %></div>
          <%= hb_form.text_field_with_auto_complete :code, { :size => 20, :class => 'code' }, { :url => houses_path(:format => :js), :method => :get, :param_name => 'search[conditions][code_like]', :with => "value + '&autocomplete=1'", :indicator => :house_spinner } %>
          <img id="house_spinner" src="/images/active_scaffold/default/indicator.gif" style="display:none">
          <div id="house_stamp"></div>
        </div>
      <% end %>
    <% end %>
    <% [ :persons_count, :children_count, :children_years ].each do |field| %>
      <div class="span-6">
        <%= f.label t(field) %><br />
        <%= f.text_field field.to_s.sub(/_count/,''), :size => 25 %>
      </div>
    <% end %>
    <div class="span-6">
      <%= f.label t(:with_animals) %>
      <div>
      <%= t(:answer_yes) %> <%= f.radio_button :with_animals, 1, :checked => (booking and booking.with_animals), :onchange => "if ($('booking_with_animals_1').checked) Form.Element.enable($('booking_animal_details'))" %>
      <%= t(:answer_no) %> <%= f.radio_button :with_animals, 0, :checked => ((booking and not booking.with_animals) or booking.nil?), :onchange => "if ($('booking_with_animals_0').checked) Form.Element.disable($('booking_animal_details'))"  %>
      </div>
    </div>
    <div class="span-6">
      <%= f.label t(:animal_details) %> <a class="info" name="animal_info" title="Anzahl und Tierart der mitfahrenden Haustiere. Bei Hunden bitte Rasse und ca. kg angeben."> <img src="/images/icons/sexy_flash/info.png" height="15" width="15" alt="info"/></a><br />
      <%= f.text_field :animal_details, :size => 30, :disabled => (booking.nil? or not booking.with_animals?) %>
    </div>
  <% end %>
  <% field_set_tag do %>
    <p>Ich reserviere obiges Fehrienhaus f체r folgenden Zeitraum:</p>
    <% f.fields_for 'houses_bookings[]', houses_bookings || HousesBooking.new do |hb_form| %>
    <div class="span-6">
      <%= label 'booking', t(:from) %><br />
      <%= hb_form.calendar_date_select :start_at, :popup => "force", :valid_date_check => "date > new Date()", :size => 20, :onChange =>
  'nights();' %>
    </div>
    <div class="span-6">
      <%= label 'booking', t(:to) %><br />
      <%= hb_form.calendar_date_select :end_at, :popup => "force", :size => 20, :onChange => 'nights();' %>
    </div>
  <% end %>
    <div class="span-6">
      <%= f.label t(:nights) %><br />
      <%= f.text_field :nights, :size => 20, :readonly => "true", :value => booking.nights %>
    </div>
    <div class="span-16">
      <%= f.label t(:calculated_price) %><br />
      <%= f.text_field :price, :size => 20, :readonly => "true" %> EURO<br />
      <%= button_to_remote t('calculate_price'), :url => :calculate, :with => "'persons=' + $('booking_persons').value + '&from=' + $('booking_houses_bookings__start_at').value + '&to=' + $('booking_houses_bookings__end_at').value + '&codes=' + $('houses_bookings').select('input').pluck('value') + '&animals=' + $('booking_with_animals_1').checked" %>
    </div>
    <div class="span-18">
    Im Preis bereit enthalten: Bettw채sche, Endreinigung, Gas, Strom, Wasser<br />Nebenkosten: Zuschl채ge (zahlbar bei Buchung): Ortstaxe
    </div>
  <% end %>
  <% field_set_tag t('contact_data'), :class => 'odd' do %>
    <div class="span-6">
      <%= f.label t(:salut) %><br />
      <%= f.select :salut, ['Frau', 'Herr', 'Frima'] %>
    </div>

    <% [ :firstname, :lastname, :company, :address, :city, :postcode].each do |field| %>
      <div class="span-6">
        <%= f.label t(field == :city ? 'booking_city' : field ) %><br />
        <%= f.text_field field, :size => 25 %>
      </div>
    <% end %>
    <div class="span-6">
      <%= f.label t(:country) %><br />
      <%= localized_country_select(:booking, :country, [I18n.locale], :width => 25) %>
    </div>
    <% [ :phone, :mobile, :email, :fax ].each do |field| %>
      <div class="span-6">
        <%= f.label t(field) %><br />
        <%= f.text_field field, :size => 25 %>
      </div>
    <% end %>
    <div class="clear span-18 prepend-top">
      <%= f.label t(:notes) %><br />
      <%= f.text_area :notes, :rows => 4 %>
    </div>
  <% end %>
<br />
<p>Die <a href="/terms">Allgemeinen Gesch채ftsbedingungen (AGB)</a> habe ich gelesen und bin einverstanden.</p>
<br />
  <div class="span-4"><%= f.submit t("booking_submit") %></div>
<% end %>
<div class="span-4"><%= button_to t("cancel_booking"), :houses, :method => 'get' %></div>
