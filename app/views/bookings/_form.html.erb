<% form_for @booking do |f| %>
  <%= f.error_messages %>
  <div id="stamps">
  <% for house in @houses do %>
    <div id="house_<%= house.id %>">
    <%= render :partial => 'houses/stamp', :locals => { :house => house} %>
    </div>
  <% end %>
  </div>
<br class="clear" />
  <p>
    <%= f.label t :date_from %><br />
    <%= f.calendar_date_select :from %>
  </p>
  <p>
    <%= f.label t :date_to %><br />
    <%= f.calendar_date_select :to %>
  </p>
  <p>
    <%= f.label t :nights %><br />
    <%= f.text_field :nights %>
  </p>
  <p>
    <%= f.label t :persons %><br />
    <%= f.text_field :persons %>
  </p>
  <p>
    <%= f.label t :with_animals %><br />
    <%= f.check_box :with_animals %>
  </p>
  <p>
    <%= f.label t :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.label t :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label t :mobile %><br />
    <%= f.text_field :mobile %>
  </p>
  <p>
    <%= f.label t :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label t :firstname %><br />
    <%= f.text_field :firstname %>
  </p>
  <p>
    <%= f.label t :lastname %><br />
    <%= f.text_field :lastname %>
  </p>
  <p>
    <%= f.label t :company %><br />
    <%= f.text_field :company %>
  </p>
  <p>
    <%= f.label t :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label t :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label t :postcode %><br />
    <%= f.text_field :postcode %>
  </p>
  <p>
    <%= f.label t :country %><br />
    <%= f.text_field :country %>
  </p>
  <p><%= f.submit t "booking_submit" %></p>
<% end %>
