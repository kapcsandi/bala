<% form_for @booking do |f| %>
  <%= f.error_messages %>
  <div id="stamps">
  <% for house in @houses do %>
    <%= render :partial => 'houses/stamp', :locals => { :house => house, :last => (@houses.last == house)} %>
  <% end %>
  </div>
<hr class="clear" />
<p><%= t :booking_hint %></p>
<br class="clear" />
<% field_set_tag t('booking_details'), :class => :half do %>
  <p>
    <%= f.label t :date_from %><br />
    <%= f.calendar_date_select :from %>
  </p>
  <p>
    <%= f.label t :date_to %><br />
    <%= f.calendar_date_select :to %>
  </p>
  <p>
    <%= f.label t :nights %><br />
    <%= f.text_field :nights %>
  </p>
  <p>
    <%= f.label t :persons %><br />
    <%= f.text_field :persons %>
  </p>
  <p>
    <%= f.label t :with_animals %><br />
    <%= f.check_box :with_animals %>
  </p>
  <div class="clear">
    <%= f.label t :notes %><br />
    <%= f.text_area :notes %>
  </div>
<% end %>
<% field_set_tag t('contact_data') do %>
  <p>
    <%= f.label t :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label t :mobile %><br />
    <%= f.text_field :mobile %>
  </p>
  <p>
    <%= f.label t :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label t :firstname %><br />
    <%= f.text_field :firstname %>
  </p>
  <p>
    <%= f.label t :lastname %><br />
    <%= f.text_field :lastname %>
  </p>
  <p>
    <%= f.label t :company %><br />
    <%= f.text_field :company %>
  </p>
  <p>
    <%= f.label t :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label t :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label t :postcode %><br />
    <%= f.text_field :postcode %>
  </p>
  <p>
    <%= f.label t :country %><br />
    <%= f.text_field :country %>
  </p>
<% end %>
<div class="span-4"><%= f.submit t "booking_submit" %></div>
<div class="span-4"><%= button_to t("cancel_booking"), :back %></div>
<% end %>
