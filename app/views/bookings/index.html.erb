  </tr>
  <% for hb in @bookings %>
    <tr>
      <td><%=h hb.start_at %></td>
      <td><%=h hb.end_at %></td>
      <td><%=h hb.nights %></td>
      <td><%=h hb.booking.persons %></td>
      <td><%=h hb.booking.firstname %></td>
      <td><%=h hb.booking.lastname %></td>
      <td><%=h hb.booking.city %></td>
      <td><%= link_to t("admin.show"), hb.booking %></td>
      <td><%= link_to t("admin.edit"), edit_booking_path(hb.booking) %></td>
      <td><%= link_to t("admin.destroy"), hb.booking, :confirm => t('Are you sure?'), :method => :delete %></td>
    </tr>
  <% end %>
