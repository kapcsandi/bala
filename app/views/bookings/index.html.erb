<%= event_calendar %>

<table>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Nights</th>
    <th>Persons</th>
    <th>With Animals</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Company</th>
    <th>Address</th>
    <th>City</th>
    <th>Country</th>
  </tr>
  <% for booking in @bookings %>
    <tr>
      <td><%=h booking.start_at %></td>
      <td><%=h booking.end_at %></td>
      <td><%=h booking.nights %></td>
      <td><%=h booking.persons %></td>
      <td><%=h booking.with_animals %></td>
      <td><%=h booking.firstname %></td>
      <td><%=h booking.lastname %></td>
      <td><%=h booking.company %></td>
      <td><%=h booking.city %></td>
      <td><%=h booking.country %></td>
      <td><%= link_to t("admin.show"), booking %></td>
      <td><%= link_to t("admin.edit"), edit_booking_path(booking) %></td>
      <td><%= link_to t("admin.destroy"), booking, :confirm => t('Are you sure?'), :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to t("admin.new_booking"), new_booking_path %></p>
