<% form_for @page do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label t :title %><br />
    <%= textile_editor :page, :title %>
  </p>
  <p>
    <%= f.label t :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.label t :body %><br />
    <%= f.text_area :body %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
<%= textile_editor_initialize %>