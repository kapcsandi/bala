<% form_for @page do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label t :path %><br />
    <%= f.text_field :path %>
  </p>
  <p>
    <%= f.label t :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label t :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.label t :body %><br />
    <%= textile_editor :page, :body %>
  </p>
  <p><%= f.submit t("Submit") %></p>
<% end %>
<%= textile_editor_initialize %>